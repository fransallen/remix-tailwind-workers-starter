{
  "private": true,
  "name": "Remix Starter",
  "description": "A Remix starter that includes Tailwind CSS, TypeScript, and Cloudflare Workers deployment.",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/tailwind.css --minify",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev": "concurrently \"npm run dev:css\" \"remix watch\" \"npm start\"",
    "dev:css": "tailwindcss -o ./app/tailwind.css --watch",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "postinstall": "remix setup cloudflare-workers",
    "start": "miniflare --build-command \"npm run dev:worker\" --watch",
    "deploy": "npm run build && wrangler publish"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "@remix-run/cloudflare-workers": "^1.1.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.19",
    "typescript": "^4.1.2",
    "@cloudflare/workers-types": "^2.2.2",
    "esbuild": "0.13.14",
    "miniflare": "2.0.0-next.3"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
